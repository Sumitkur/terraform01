pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
            checkout()            

          }
        }
        
        stage ("terraform init") {
            steps {
                sh 'echo "hi my name is sumit"'
                sh '/c/ProgramData/chocolatey/bin/terraform init'
            }
        }
        
        stage ("terraform Action") {
            steps {
                echo "Terraform action is --> ${action}"
                sh ('terraform ${action} --auto-approve') 
           }
        }
    }
}
